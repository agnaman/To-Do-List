<%- include("header") -%>

	<% if(locals.message){ %>
		<div class="alert alert-info" role="alert">
			<strong>Error!</strong> <%=message.error%>
		</div>
	<% } %>

	<a href = "/" class = "homeButton">Home</a>
	
	<div class = "box" id = "heading">
		<h1> My Lists </h1>
	</div>
	
	<div class = "box">
	
		<% clientLists.forEach(function(list){ %>
			<form action = "/deleteList" method = "POST">
				<div class = "item" id = "hoverColor">
					<input type = "checkbox" name = "checkbox" value = "<%= list._id %>" onChange = "this.form.submit()">
					<div class = "itemCenter" >
						<p><a href = "/lists/<%= list.name %>"> <%= list.name %> </a></p>
					</div>
				</div>
			</form>
		<% }); %>
		
		<form class = "item" action = "/clientLists" method = "POST">
				<input type = "text" name = "newHead" placeholder = "Create New List" autocomplete = "off">
				<button type = "submit" name = "list" value = "" >+</button>
		</form>
		
	</div>

<%- include("footer") -%>



